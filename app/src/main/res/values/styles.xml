<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>
        <item name="android:textViewStyle">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="android:windowContentTransitions">true</item>
        <!-- Splash Screen -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_screen_anim</item>
        <item name="android:windowSplashScreenAnimationDuration">@integer/splash_animation_duration</item>
        <item name="android:windowSplashScreenBackground">?android:colorBackground</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/splash_screen_branding</item>
        <item name="buttonActionStyle">@style/ButtonAction</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Button.Alt" parent="@style/Widget.Material3.Button.OutlinedButton"/>

    <style name="Text.Title" parent="@style/TextAppearance.Material3.TitleMedium"/>

    <style name="Text.Heading.Large" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Heading.Medium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonAction">
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_button_action</item>
        <item name="shapeAppearance">@style/ShapeAppearance.M3.Comp.FilledButton.Container.Shape</item>
    </style>

    <style name="CardView.ShapeAppearance.RoundedTop" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CardView.ShapeAppearance.Square" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="Chip.Filter" parent="Widget.Material3.Chip.Filter"/>
    <style name="Chip.Input" parent="Widget.Material3.Chip.Input">
        <item name="chipBackgroundColor">?attr/colorSecondaryContainer</item>
        <item name="chipStrokeColor">?attr/colorAccent</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="closeIconTint">?attr/colorAccent</item>
    </style>

</resources>
