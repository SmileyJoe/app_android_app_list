<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>
        <item name="android:textViewStyle">@style/TextAppearance.Material3.BodyMedium</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Button.Alt" parent="@style/Widget.Material3.Button.OutlinedButton"/>

    <style name="Text.Title" parent="@style/TextAppearance.Material3.TitleMedium"/>

    <style name="Text.Heading.Large" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Heading.Medium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.ListAction" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:drawableTint">?android:colorPrimary</item>
        <item name="android:drawablePadding">@dimen/padding_medium</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

</resources>
