<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ButtonProgress">
        <attr name="text_enabled" format="reference"/>
        <attr name="text_disabled" format="reference"/>
        <attr name="text_color_enabled" format="reference"/>
        <attr name="text_color_disabled" format="reference"/>
        <attr name="background_enabled" format="reference"/>
        <attr name="background_disabled" format="reference"/>
        <attr name="background_loading" format="reference"/>
        <attr name="state" format="enum">
            <enum name="enabled" value="0"/>
            <enum name="disabled" value="1"/>
            <enum name="loading" value="2"/>
        </attr>
    </declare-styleable>

</resources>